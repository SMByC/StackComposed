#!/usr/bin/env bash

if [ ! -d ${STACKCOMPOSED_DIR} ]; then
    mkdir -p $STACKCOMPOSED_DIR
fi

cd $STACKCOMPOSED_DIR

# check if the project stackcomposed exist with VCS
if [ ! -d ${STACKCOMPOSED_DIR}/.hg ]; then
    cd ..
    rm -rf ${STACKCOMPOSED_DIR}
    hg clone https://bitbucket.org/SMBYC/stackcomposed StackComposed
    cd $STACKCOMPOSED_DIR
fi

# synchronize changes with repository, update and clean
hg pull https://bitbucket.org/SMBYC/stackcomposed
hg update -C
hg status -un|xargs rm 2> /dev/null

# print status
echo -e "\nThe last commit:\n"
hg tip
echo -e "Update finished\n"
